<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--console-->
    <appender name="console-log" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5p [%c] [%F:%L] -%X{SOFA-TraceId} -%msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!--自定义日志方式-->
    <appender name="catalina-log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Append>true</Append>
        <File>${logging.path}/catalina.log</File>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5p [%c] [%F:%L] -%X{SOFA-TraceId} -%msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logging.path}/catalina.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
    </appender>


    <root level="INFO">
        <appender-ref ref="console-log"/>
        <appender-ref ref="catalina-log"/>
    </root>
</configuration>